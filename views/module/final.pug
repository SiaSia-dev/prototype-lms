extends ../layouts/main

block content
  .main-container
    aside.sidebar
      .course-title Newsletter → Formation
      
      .module-section
        .module-header Module Unique
        ul.lesson-list
          li.lesson-item
            a.lesson-link(href="/lesson/1") 1. Introduction
          li.lesson-item  
            a.lesson-link(href="/lesson/2") 2. Méthode ADDIE
          li.lesson-item
            a.lesson-link(href="/lesson/3") 3. Transformation
          li.lesson-item
            a.lesson-link(href="/lesson/4") 4. Validation

    main.main-content
      .course-header
        h1 🎓 Formation Complétée !
        p.course-subtitle Bravo, vous avez terminé toutes les étapes de la formation.
        p 🎉 Vous êtes désormais prêt·e à transformer vos newsletters en véritables expériences pédagogiques.


      
        .course-stats
          .stat-item
            span 📚
            span 4 leçons
          .stat-item
            span ⏱️  
            span 45 minutes
          .stat-item
            span 🎯
            span 100% complété

  

      section.certificate
        h2 🏅 Certificat de réussite
        p Bravo La Démo, vous avez complété la formation avec succès.
        p.date Délivré le #{new Date().toLocaleDateString('fr-FR')}
        a.btn-download(href="/certificat-image") Télécharger mon Certificat 📄
